# Climate Burden Index - Environment Configuration

# Database
DATABASE_URL=postgresql://cbi_user:cbi_password@localhost:5432/climate_burden_index
DB_ECHO=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
ENVIRONMENT=production

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Data Paths
DATA_RAW_CLIMATE=/data/raw/climate/
DATA_RAW_AQS=/data/raw/aqs/
DATA_RAW_SVI=/data/raw/svi/
DATA_RAW_TIGER=/data/raw/tiger/
DATA_RAW_ESG=/data/raw/esg/

DATA_INTERIM_HEAT=/data/interim/heat_exposure.parquet
DATA_INTERIM_AQS=/data/interim/aqs_metrics.parquet
DATA_INTERIM_SVI=/data/interim/svi_normalized.parquet
DATA_INTERIM_TIGER=/data/interim/tiger_tracts.parquet
DATA_INTERIM_ESG=/data/interim/esg_indicators.parquet

DATA_PROCESSED_FEATURES=/data/processed/features.parquet
DATA_PROCESSED_CLUSTERS=/data/processed/clusters.parquet
DATA_PROCESSED_PREDICTIONS=/data/processed/predictions.parquet

# Model Paths
XGB_MODEL_PATH=/models/cbi_xgb.json
SHAP_EXPLAINER_PATH=/models/shap_explainer.pkl
HDBSCAN_MODEL_PATH=/models/hdbscan_model.pkl
KMEANS_MODEL_PATH=/models/kmeans_model.pkl

# ML Configuration
N_CLUSTERS=5
TEST_SIZE=0.2
RANDOM_STATE=42
EARLY_STOPPING_ROUNDS=10

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://cbi_user:cbi_password@localhost:5432/airflow

# Security
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
API_RATE_LIMIT=100  # requests per minute

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token
